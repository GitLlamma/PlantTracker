<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PlantTracker.ViewModels"
             x:Class="PlantTracker.Views.RegisterPage"
             x:DataType="vm:RegisterViewModel"
             Title="{Binding Title}"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="32" Spacing="16" VerticalOptions="Center">

            <Label Text="ðŸŒ¿ PlantTracker"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"
                   Margin="0,0,0,16"/>

            <Label Text="Create Account" FontSize="22" FontAttributes="Bold"/>

            <Entry Placeholder="Display Name"
                   Text="{Binding DisplayName}"/>

            <Entry Placeholder="Email"
                   Text="{Binding Email}"
                   Keyboard="Email"/>

            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   IsPassword="True"/>

            <Entry Placeholder="Zip Code (e.g. 90210)"
                   Text="{Binding ZipCode}"
                   Keyboard="Numeric"
                   MaxLength="5"/>

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}"
                   FontSize="13"/>

            <Button Text="Create Account"
                    Command="{Binding RegisterCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    Style="{StaticResource PrimaryButton}"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="4" Margin="0,8,0,0">
                <Label Text="Already have an account?" VerticalOptions="Center"/>
                <Label Text="Sign In"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToLoginCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

