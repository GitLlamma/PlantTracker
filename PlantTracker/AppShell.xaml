<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PlantTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PlantTracker.Views"
    Shell.NavBarIsVisible="False">

    <!-- ── Main app tab bar ──────────────────────────────────────────────── -->
    <TabBar x:Name="MainTabBar">

        <ShellContent
            Title="Search"
            Route="Search"
            Icon="tab_search.svg"
            ContentTemplate="{DataTemplate views:SearchPage}"/>

        <ShellContent
            Title="My Garden"
            Route="MyGarden"
            Icon="tab_garden.svg"
            ContentTemplate="{DataTemplate views:MyGardenPage}"/>

        <ShellContent
            Title="Settings"
            Route="Settings"
            Icon="tab_settings.svg"
            ContentTemplate="{DataTemplate views:SettingsPage}"/>

    </TabBar>

    <!-- ── Auth routes (no tab bar) ─────────────────────────────────────── -->
    <ShellContent
        x:Name="LoginShell"
        Route="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Shell.TabBarIsVisible="False"/>

    <ShellContent
        x:Name="RegisterShell"
        Route="Register"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Shell.TabBarIsVisible="False"/>

</Shell>
